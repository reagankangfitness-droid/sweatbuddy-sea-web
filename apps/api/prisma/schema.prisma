generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  city      String
  country   String   @default("Southeast Asia")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities    Activity[]
  groupMembers  GroupMember[]
  messages      Message[]

  @@map("users")
}

model Activity {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   @default("OTHER") // RUN, GYM, YOGA, HIKE, CYCLING, OTHER
  city        String
  address     String?
  latitude    Float
  longitude   Float
  startTime   DateTime?
  endTime     DateTime?
  maxPeople   Int?
  imageUrl    String?

  // Pricing fields
  isFree         Boolean  @default(true)
  price          Float    @default(0)  // Amount in cents
  currency       String   @default("SGD")

  // PayNow payment fields
  paynowEnabled  Boolean  @default(false)
  paynowNumber   String?
  paynowName     String?
  paynowQrCode   String?

  // Stripe payment fields
  stripeEnabled  Boolean  @default(false)
  stripePriceId  String?

  status      String   @default("PUBLISHED") // DRAFT, PUBLISHED, CANCELLED, COMPLETED
  userId      String?
  hostId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@map("activities")
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  city        String
  latitude    Float
  longitude   Float
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  GroupMember[]
  messages Message[]

  @@map("groups")
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  role      String   @default("member")
  joinedAt  DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@map("group_members")
}

model Message {
  id        String   @id @default(cuid())
  content   String
  groupId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("messages")
}
